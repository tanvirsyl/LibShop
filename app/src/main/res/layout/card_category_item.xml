<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginVertical="20dp"
    android:id="@+id/cardview_level_d_item"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"

    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="25dp"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/core700"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/card_category_imagecard"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="#fff"
            android:padding="20dp"
            android:scaleType="centerCrop"
            cardview:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/card_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Heart sdfsdfsd"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="16sp"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintStart_toEndOf="@+id/card_category_imagecard"
            cardview:layout_constraintTop_toTopOf="parent" />


        <!---->


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>