<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="20dp"
    android:id="@+id/cardview_level_d_item"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"

    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="25dp"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/core700"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/card_category_imagecard"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#fff"
            android:scaleType="centerCrop"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="2dp"
            android:text="Heart sdfsdfsd"

            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            cardview:layout_constraintBottom_toTopOf="@+id/card_category_bio"
            cardview:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/card_category_bio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="20dp"
            android:text="Heart sdfsdfsd"
            android:textColor="@color/black"
            android:maxLines="1"
            android:textSize="14sp"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintEnd_toStartOf="@+id/card_category_imagecard5"
            cardview:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/card_category_imagecard5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_add_circle_24"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:tint="@color/purple_200" />

        <!---->


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>